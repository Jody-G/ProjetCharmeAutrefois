{% extends 'base.html.twig' %}

{% block title %}Hello RealisationController!{% endblock %}

{% block body %}

<section class="realisation">
<h1 style="text-align: center;"> Détail des réalisations </h1>    
<br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col">
        <div class="card" style="width: 18rem;">
        <img src="{{ realisation.file }}" alt="..."/>
        <div class="card-body">
            <h5 class="card-title">{{ realisation.nom }}</h5>
            <p class="card-text">{{ realisation.description }}</p>
            <p class="card-text">Publié le {{ realisation.createdAt|date('d/m/y') }}</p>
            <a href="#" class="btn btn-primary">En Savoir Plus</a>
        </div>
        </div>
    </div>
  </div>
</div>
</section>

{% endblock %}
